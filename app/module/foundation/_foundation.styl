.foundation__el
	item(3,20px)
	cp()
	overflow: hidden
	position: relative
	border-radius 10px
	border 1px solid #e6e6e6
	background-color #ffffff
	padding: 15px
	padding-bottom: 40px


.foundation__el-lock
	position: absolute
	width: 100%
	height: 100%
	background: white
	opacity .4
	display: none
	left: 0
	top 0
	z-index 10

.foundation__el-close
	display: none
	position: absolute
	right: 15px
	top 10px
	cp()
	.icon
		size 10px

.foundation__img
	margin-bottom: 30px

.foundation__img-el
	height: 80px
	width: 100%
	bg-full()

.foundation__name
	text-align: center
	margin-bottom: 10px

.foundation__info
	text-align: center
	opacity .7

.foundation__el--active
	.foundation__el-close
		display: block
	border-color yellow

.foundation__el--default
	.foundation__el-lock
		display: block
	&:hover
		cursor default
